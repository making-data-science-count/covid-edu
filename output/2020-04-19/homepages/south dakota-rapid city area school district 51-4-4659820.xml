	<script>
		jQuery(document).ready(function() {
			var $spgSlider = jQuery( '#posts-carousel__slides' );

			// On before slide change
			// - Since we're using beforeChange `currentSlide` is the current slide
			// - _before_ changing so our currentSlide in this instance is actually
			// - our previous slide and nextSlide is actually our current slide
			$spgSlider.on( 'beforeChange',
				function( event, slick, currentSlide, nextSlide ) {
					var $spgDotsOuter = jQuery( '.slick-dots', this ),
							$spgDots      = jQuery( 'li', $spgDotsOuter ),
							numDots       = $spgDots.length,
							prevSlide			= currentSlide,
							currentSlide	= nextSlide;

					if ( currentSlide == ( numDots - 1 ) ) {
						nextSlide = 0;
					} else {
						nextSlide = ( currentSlide + 1 );
					}

					if ( currentSlide == 0 ) {
						prevSlide = ( numDots - 1 );
					} else {
						prevSlide = ( currentSlide - 1 );
					}

					// console.log(
					// 	'numDots:', numDots,
					// 	'prevSlide:', prevSlide,
					// 	'currentSlide:', currentSlide,
					// 	'nextSlide:', nextSlide,
					// );

					// Hide all visible dots
					jQuery( 'li:visible', $spgDotsOuter ).css( 'display', 'none' );

					// Show only the three dots we want
					jQuery( $spgDots[prevSlide] ).css( 'display', 'block' );
					jQuery( $spgDots[currentSlide] ).css( 'display', 'block' );
					jQuery( $spgDots[nextSlide] ).css( 'display', 'block' );

			});
		});
