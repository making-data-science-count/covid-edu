        function rotatingBanner(container) {
            var banner = this;
            this.container = document.querySelector(container);
            this.bannerNav = document.querySelector('.banner-nav');
            this.bannerNav.navItems = this.bannerNav.querySelectorAll('button');
            this.bannerCount = this.container.querySelectorAll('li').length;
            this.activeBanner = 0; 
            this.bannerNav.navItems[0].classList.add('active');

            this.bannerNav.addEventListener("click", function(e) {
                clearInterval(rotateBanner);
                banner.activeBanner = parseInt(e.target.dataset.index) - 1;
                banner.rotate();

                rotateBanner = setInterval(function() {
                    banner.rotate();
                }, 3500);
            });
        }

        rotatingBanner.prototype.rotate = function() {
            this.activeBanner = (this.activeBanner + 1) == this.bannerCount
                                ? 0
                                : this.activeBanner + 1;
            this.container.setAttribute('style','top: -' + this.activeBanner * 137 + 'px;');

            for(var i = 0; i < this.bannerNav.navItems.length; i++) {
                this.bannerNav.navItems[i].classList.remove('active');
                console.log(this.activeBanner, this.bannerCount);
                this.activeBanner == this.bannerCount - 1
                    ? this.bannerNav.navItems[0].classList.add('active')
                    : this.bannerNav.navItems[this.activeBanner].classList.add('active');
            }

            if(this.activeBanner + 1 == this.bannerCount) {
                setTimeout(function() {
                    newBanner.container.classList.add('no-transition');
                    newBanner.container.setAttribute('style','top: 0px;');
                    setTimeout(function() {
                        newBanner.container.classList.remove('no-transition');
                        newBanner.activeBanner = 0;
                    }, 1000)
                }, 1000);
            }

        };

        var newBanner = new rotatingBanner('.rotating-banner');
        var rotateBanner = setInterval(function() {
            newBanner.rotate();
        }, 3500);

  </script>
