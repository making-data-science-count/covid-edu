    function isValidDate(d) {
        return d instanceof Date && !isNaN(d);
    }

    $("#btnSubmit").click(function (e) {

        var validator = $("#remoteLearningDeviceRequestForm").kendoValidator().data('kendoValidator');


        if (!validator.validate()) {
            preventDefaultAction(e);
        }
        else {
            //if here, the kendo validator validates but we still need to check if the date is within range.
            var dateVal = new Date($('#RemoteLearningDevice_DateOfBirth').val());
            var minDate = getMinDate();
            var maxDate = new Date();

            if (isValidDate(dateVal)) {
                if (dateVal < minDate || dateVal > maxDate) {
                    event.preventDefault();
                    $('#spn-dateOfBirth-error-msg').text('Invalid Date Of Birth');
                    $("p.val").show();
                }
                else {
                    $('#spn-dateOfBirth-error-msg').text('');
                    $("p.val").hide();
                }
            }
        }



        if ($("#terms").prop("checked") == false) {
            $(".terms .k-invalid-msg").show();
        } else {
            $(".terms .k-invalid-msg").hide();
        }

    });

    function getMinDate() {
        var minDate = new Date("01/01/1900");
        return minDate;
    }

    function preventDefaultAction(event) {
        return event.preventDefault ? event.preventDefault() : event.returnValue = false;
    }

    function onRelationshipChange(e) {

        var selectedItem = e.sender.dataItem().Value;

        if (selectedItem && selectedItem.toLowerCase() === 'student') {
